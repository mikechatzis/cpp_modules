CC		= g++
CFLAGS	= -Wall -Wextra -Werror -std=c++98

AR		= ar rcs
RM		= rm -f

NAME	= DiamondTrap
INCL	= libft.h

SRC		= ClapTrap.cpp main.cpp ScavTrap.cpp FragTrap.cpp DiamondTrap.cpp

OBJ		= ${SRC:.c=.o}

all:		$(NAME)

$(NAME):	$(OBJ)
			$(CC) $(CFLAGS) -o $(NAME) $(OBJ)

clean:		
			$(RM) *.o a.out *.a

fclean:		clean
			$(RM) $(NAME)

re:			fclean all

.PHONY: all clean fclean re